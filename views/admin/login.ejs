<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <title>login</title>
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body>
    <div class="container">
      <div id="login">
        <form action="" method="post" id="myform">
          <input type="hidden" name="ajaxlogin" id="ajaxlogin" />
          <input type="hidden" name="ajaxcode" id="ajaxcode" />
          <dl>
            <dd>
              <span style="padding-right: 2px">Username</span>
              <input class="text" type="text" name="username" id="username" />
            </dd>
            <dd>
              <span style="padding-right: 4px">Password</span>
              <input
                class="text"
                type="password"
                name="password"
                id="password"
              />
            </dd>
            <dd>
              <span style="padding-right: 30px">Code</span>
              <input id="verify" type="text" name="verify" />
              <img
                id="verify_img"
                src="/admin/verify"
                title="refresh"
                onclick="javascript:this.src='/admin/verify?mt='+Math.random()"
              />
            </dd>
            <dd>
              <input
                type="submit"
                class="submit"
                name="dosubmit"
                value="submit"
              />
            </dd>
          </dl>
        </form>
      </div>
    </div>
  </body>
</html>
